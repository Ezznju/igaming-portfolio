		<!-- GSAP & SplitType -->
		<script>
			import { gsap } from "gsap";
			import { ScrollTrigger } from "gsap/ScrollTrigger";
			import SplitType from "split-type";

			gsap.registerPlugin(ScrollTrigger);

			// 1. Hero Text Reveal (Load)
			const titleText = new SplitType('#hero-title', { types: 'chars' });
			const subtitleText = new SplitType('#hero-subtitle', { types: 'words' });

			const tl = gsap.timeline();

			tl.from(titleText.chars, {
				y: 100,
				opacity: 0,
				rotateX: -90,
				stagger: 0.02,
				duration: 1,
				ease: "back.out(1.7)",
			})
			.from(subtitleText.words, {
				y: 20,
				opacity: 0,
				stagger: 0.1,
				duration: 0.8,
				ease: "power2.out"
			}, "-=0.5")
			.from(".hero-btn", {
				scale: 0.5,
				opacity: 0,
				duration: 0.5,
				ease: "back.out(1.7)"
			}, "-=0.2");

			// 2. Scroll-to-Roll Effect (Hero Parallax)
			gsap.to(".hero-content", {
				yPercent: -50,
				ease: "none",
				scrollTrigger: {
					trigger: "#hero",
					start: "top top",
					end: "bottom top",
					scrub: true
				}
			});

			// 3. Magnetic Navigation
			const nav = document.querySelector('nav');
			let lastScroll = 0;

			window.addEventListener("scroll", () => {
				const currentScroll = window.pageYOffset;
				if (currentScroll > 50 && currentScroll > lastScroll) {
					// Scrolling Down
					gsap.to(nav, { yPercent: -100, duration: 0.3, ease: "power2.inOut" });
				} else {
					// Scrolling Up
					gsap.to(nav, { yPercent: 0, duration: 0.3, ease: "power2.inOut" });
				}
				lastScroll = currentScroll;
			});

			// 4. Card Stacking Effect (Services & Portfolio)
			const cards = gsap.utils.toArray('.tilt-card');
			cards.forEach((card, i) => {
				gsap.set(card, { transformStyle: "preserve-3d" });
				
				ScrollTrigger.create({
					trigger: card,
					start: "top bottom-=100",
					end: "bottom top",
					onEnter: () => {
						gsap.fromTo(card, 
							{ opacity: 0, y: 50, rotationX: 10 },
							{ opacity: 1, y: 0, rotationX: 0, duration: 0.8, ease: "power3.out" }
						);
					}
				});
			});

			// 5. Marquee Effect for Logos
			const marquee = document.querySelector('.marquee-track');
			// 6. Portfolio Filter Logic
			const filterButtons = document.querySelectorAll('.portfolio-filter');
			const portfolioItems = document.querySelectorAll('.portfolio-item');

			filterButtons.forEach(button => {
				button.addEventListener('click', () => {
					const filter = button.dataset.filter;
					
					// Update Active State
					filterButtons.forEach(btn => {
						btn.classList.remove('bg-primary', 'text-white');
						btn.classList.add('bg-white', 'text-dark');
					});
					button.classList.remove('bg-white', 'text-dark');
					button.classList.add('bg-primary', 'text-white');
					
					// Animate Filtering
					const timeline = gsap.timeline();
					
					portfolioItems.forEach(item => {
						const category = item.dataset.category;
						const shouldShow = filter === 'all' || category === filter;
						
						if (shouldShow) {
							item.style.display = 'block';
							timeline.to(item, { autoAlpha: 1, scale: 1, duration: 0.3 }, "<0.05");
						} else {
							timeline.to(item, { autoAlpha: 0, scale: 0.8, duration: 0.3, onComplete: () => {
								item.style.display = 'none';
							}}, "<");
						}
					});
				});
			});

			// 7. Form Handling
			const form = document.getElementById('contact-form');
			const submitBtn = document.getElementById('submit-btn');
			const btnText = document.getElementById('btn-text');
			const btnSpinner = document.getElementById('btn-spinner');
			const formStatus = document.getElementById('form-status');

			if(form) {
				form.addEventListener('submit', async (e) => {
					e.preventDefault();
					btnText.textContent = 'Sending...';
					btnSpinner.classList.remove('hidden');
					submitBtn.disabled = true;
					
					try {
						const response = await fetch(form.action, {
							method: 'POST',
							body: new FormData(form),
							headers: { 'Accept': 'application/json' }
						});
						
						if (response.ok) {
							formStatus.className = 'mb-6 p-4 rounded-lg form-success';
							formStatus.textContent = 'Message sent! Let\'s build something great.';
							formStatus.classList.remove('hidden');
							form.reset();
						} else {
							throw new Error('Failed');
						}
					} catch (error) {
						formStatus.className = 'mb-6 p-4 rounded-lg form-error';
						formStatus.textContent = 'Something went wrong. Please try again.';
						formStatus.classList.remove('hidden');
					} finally {
						btnText.textContent = 'Send Message';
						btnSpinner.classList.add('hidden');
						submitBtn.disabled = false;
					}
				});
			}

			// 8. GSAP Counter Animation
			gsap.utils.toArray(".counter").forEach(counter => {
				const target = counter.dataset.target;
				const tl = gsap.timeline({
					scrollTrigger: { trigger: counter, start: "top 80%" }
				});
				tl.from(counter, {
					innerText: 0,
					duration: 2,
					snap: { innerText: 1 },
					ease: "power2.out"
				});
			});
		</script>
